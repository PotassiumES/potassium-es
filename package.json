{
  "name": "potassium-es",
  "version": "0.1.0-alpha1",
  "description": "A browser-side framework for wider web applications",
  "main": "src/App.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "docs": "./node_modules/.bin/esdoc",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "prettier": "prettier --write src/*.js src/**/*.js tests/*.js",
    "host-tests": "http-server ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PotassiumES/potassium-es.git"
  },
  "keywords": [
    "webxr",
    "vr",
    "ar",
    "xr",
    "javascript-framework",
    "responsive-web"
  ],
  "author": "Trevor F. Smith <trevor@transmutable.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PotassiumES/potassium-es/issues"
  },
  "homepage": "https://github.com/PotassiumES/potassium-es#readme",
  "prettier": {
    "semi": false,
    "useTabs": true,
    "printWidth": 120,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ],
      "test/**/*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    },
    "relative": true
  },
  "dependencies": {
    "action-input": "git+https@github.com:PotassiumES/action-input.git#development"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.2",
    "http-server": "^0.11.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "potassium-test": "git+https@github.com:PotassiumES/potassium-test.git#development",
    "prettier": "^1.13.7",
    "rollup": "^0.62.0",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0"
  }
}
