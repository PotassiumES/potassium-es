{
  "name": "potassium-es",
  "version": "1.0.0",
  "description": "A browser-side framework for wider web applications",
  "main": "src/App.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "docs": "./node_modules/.bin/esdoc",
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "prettier": "prettier --write src/*.js src/**/*.js tests/*.js",
    "host-tests": "http-server ./"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PotassiumES/potassium-es.git"
  },
  "keywords": [
    "webxr",
    "vr",
    "ar",
    "xr",
    "javascript-framework",
    "responsive-web"
  ],
  "author": "Trevor F. Smith <trevor@transmutable.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PotassiumES/potassium-es/issues"
  },
  "homepage": "https://github.com/PotassiumES/potassium-es#readme",
  "prettier": {
    "semi": false,
    "useTabs": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier"
    ],
    "rules": {
      "prefer-const": "error",
      "no-var": "error",
      "prettier/prettier": "error"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "action-input": "github:PotassiumES/action-input",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-potassium": "1.0.0",
    "potassium-test": "github:PotassiumES/potassium-test",
    "three": "^0.118.3"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "http-server": "^0.12.3",
    "rollup": "^2.23.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3"
  }
}
